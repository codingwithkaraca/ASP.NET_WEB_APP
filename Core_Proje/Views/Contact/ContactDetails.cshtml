@model EntityLayer.Concrete.Message
@{
    Layout = "_NewAdminLayout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Mesaj Detayları</p>
            <form class="forms-sample">

                <div class="form-group">
                    @Html.HiddenFor(x => x.MessageID, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Gönderen</label>
                    @Html.TextBoxFor(x => x.Name, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Mail</label>
                    @Html.TextBoxFor(x => x.Mail, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    @Html.TextBoxFor(x => x.Date, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>İçerik</label>
                    @Html.TextAreaFor(x => x.Content, 6,3,new {@class="form-control"})
                </div>
                <a class="btn btn-primary" href="/Contact/Index">Gelen Mesajlara Dön</a>
            </form>
        </div>
    </div>
</div>
