@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "Add Testimonial";
    Layout = "_NewAdminLayout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Yeni Referans Ekleme </p>
            <form class="forms-sample" method="post" asp-action="AddTestimonial" asp-controller="Testimonial">
                <div class="form-group">
                    <label>İsim</label>
                    <input type="text" class="form-control" asp-for="@Model.ClientName">
                </div>
                <div class="form-group">
                    <label>Şirket/Kurum ismi</label>
                    <input type="text" class="form-control" asp-for="@Model.Company">
                </div>
                <div class="form-group">
                    <label>Comment</label>
                    <input type="text" class="form-control" asp-for="@Model.Comment">
                </div>
                <div class="form-group">
                    <label>ImageUrl</label>
                    <input type="text" class="form-control" asp-for="@Model.ImageUrl">
                </div>
                <div class="form-group">
                    <label>Rol/Görev</label>
                    <input type="text" class="form-control" asp-for="@Model.Title">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark" href="/Testimonial/Index">İptal</button>
            </form>
        </div>
    </div>
</div>