@using EntityLayer.Concrete
@model List<Testimonial>
@{
    Layout = "_NewAdminLayout";
}
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Şirket</th>
                            <th>Unvan</th>
                            <th>Sil</th>
                            <th>Detaylar</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/images/faces/face1.jpg" alt="image"/>
                                </td>
                                <td>@item.ClientName</td>
                                <td>@item.Company</td>
                                <td>@item.Title</td>
                                <td>
                                    <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a>
                                </td>
                                <td>
                                    <a href="/Testimonial/EditTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Düzenle</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <br/>
                    <a href="/Testimonial/AddTestimonial" class="btn btn-outline-danger">Yeni Referans Ekleme</a>
                </div>
            </div>
        </div>
    </div>
</div>