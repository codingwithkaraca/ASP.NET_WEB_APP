@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    Layout = "_NewAdminLayout" ;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gönderilen Mesaj Listesi</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Gönderilen Kişi</th>
                        <th>Konu</th>
                        <th>Tarih</th>
                        <th>Sil</th>
                        <th>Mesajı Gör</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.WriterMessageId</td>
                            <td>@item.ReceiverName</td>
                            <td>@item.Subject</td>
                            <td>@item.Date</td>
                            <td>
                                <a href="/AdminMessage/AdminMessageDelete/@item.WriterMessageId" class="btn btn-outline-danger">Sil</a>
                            </td>
                            <td>
                                <a href="/AdminMessage/AdminMessageDetails/@item.WriterMessageId" class="btn btn-outline-warning">Mesajı Gör</a>
                            </td>

                        </tr>
                    }

                    </tbody>
                </table>
                <a class="btn btn-outline-primary" href="/AdminMessage/AdminMessageSend">Yeni Mesaj Gönder</a>
            </div>
        </div>
    </div>
</div>