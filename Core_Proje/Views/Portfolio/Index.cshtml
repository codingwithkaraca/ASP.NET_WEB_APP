@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "_NewAdminLayout";
}


<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Projelerim</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col" class="sort" data-sort="name">#</th>
                        <th scope="col" class="sort" data-sort="name">Proje Başlığı</th>
                        <th scope="col" class="sort" data-sort="budget">Görsel 1</th>
                        <th scope="col" class="sort" data-sort="status">Görsel 2</th>
                        <th scope="col" class="sort" data-sort="status">Proje URL</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Düzenle</th>
                    </tr>
                    </thead>
                    <tbody class="list">

                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">
                                @item.PortfolioID
                            </th>
                            <th class="budget">
                                @item.Name
                            </th>
                            <td>
                                @item.ImageUrl
                            </td>
                            <td>
                                @item.ImageUrl2
                            </td>
                            <td>
                                @item.ProjectUrl
                            </td>
                            <td>
                                <a href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-outline-danger">Sil</a>
                            </td>
                            <td>
                                <a href="/Portfolio/EditPortfolio/@item.PortfolioID" class="btn btn-outline-info">Düzenle</a>
                            </td>
                        </tr>
                    }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<br />
<a href="/Portfolio/AddPortfolio" class="btn btn-primary">Yeni Proje Girişi</a>
