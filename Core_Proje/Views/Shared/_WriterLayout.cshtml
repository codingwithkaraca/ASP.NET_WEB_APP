<!DOCTYPE html>
<html lang="en">


@await Html.PartialAsync("/Areas/Writer/Views/Default/_HeadPartial.cshtml")


<body>

<div class="container-scroller">
  
    
    @await Html.PartialAsync("/Areas/Writer/Views/Default/_NavbarPartial.cshtml")
    
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">

        <!-- Ana layout içinde parçalara ayırmak için html partialasync kullanıyoruz -->
        
        @await Html.PartialAsync("/Areas/Writer/Views/Default/_SidebarPartial.cshtml")
        
        
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">

                    @RenderBody()
                    
                </div>
            </div>
           
            @await Html.PartialAsync("/Areas/Writer/Views/Default/_FooterPartial.cshtml")
            
        </div>
    </div>
</div>


@await Html.PartialAsync("/Areas/Writer/Views/Default/_ScriptsPartial.cshtml")

</body>

</html>