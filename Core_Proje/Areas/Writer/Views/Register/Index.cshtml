@model Core_Proje.Areas.Writer.Models.UserRegisterVM
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/skydash/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/skydash/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/skydash/images/favicon.png"/>
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css">
</head>

<body>
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="~/skydash/images/logo.svg" alt="logo">
                        </div>
                        <h4>Bir hesaınız yok mu?</h4>
                        <h6 class="font-weight-light">Sen de hemen kayıt olabilirsin.</h6>
                        <form class="pt-3" id="registerForm" method="post">
                            <div class="form-group">
                                <label>Ad</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <input type="text" asp-for="Name" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label>Soyad</label>
                                <span asp-validation-for="Surname" class="text-danger"></span>
                                <input type="text" asp-for="Surname" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label>Görsel Url</label>
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                <input type="text" asp-for="ImageUrl" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label>Kullanıcı Adı</label>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                                <input type="text" asp-for="UserName" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label>Mail</label>
                                <span asp-validation-for="Mail" class="text-danger"></span>
                                <input type="text" asp-for="Mail" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label>Şifre</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input type="text" asp-for="Password" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label>Şifre Tekrar</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                <input type="text" asp-for="ConfirmPassword" class="form-control"/>
                            </div>

                            @*<div class="mb-4">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input">
                                        I agree to all Terms & Conditions
                                    </label>
                                </div>
                            </div>*@
                            <div class="text-danger" asp-validation-summary="ModelOnly">

                            </div>
                            <div class="mt-3">
                                <button class="btn btn-primary">Kayıt Ol</button>
                            </div>
                            @*<div class="text-center mt-4 font-weight-light">
                                Already have an account? <a href="login.html" class="text-primary">Login</a>
                            </div>*@
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

</body>

