@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    Layout = "_WriterLayout";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Giden/Gönderilen Mesajlar</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Konu</th>
                        <th>Alıcı</th>
                        <th>Tarih</th>
                        <th>Detaylar</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.WriterMessageId</td>
                            <td>@item.Subject</td>
                            <td>@item.ReceiverName</td>
                            <td>@item.Date</td>
                            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                            <td>
                                <a href="/Writer/Message/ReceiverMessageDetails/@item.WriterMessageId" class="btn btn-outline-primary">Detaylar</a>
                            </td>
                        </tr>
                    }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>